  class="{{cssClass}} container-fluid h-100"
  autocomplete="off"
  style="text-align: center;"
>
	{{{pokeballStyles pokeball}}}
	<div class="sheet-body content d-flex align-items-end flex-column h-100">
		<div class="header"><h3 class="pl-1">{{name}}'s Level Up.  {{oldLvl}} â–¶ {{newLvl}}</h3></div>
		<div class="d-flex level-up-inner">
